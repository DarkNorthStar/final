<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.tabletop.GameConnectorController">
   <children>
      <Label prefHeight="258.0" prefWidth="1227.0" text="Connect to a game" textAlignment="JUSTIFY" textOverrun="WORD_ELLIPSIS" wrapText="true">
         <font>
            <Font name="Felix Titling" size="96.0" />
         </font></Label>
      <HBox alignment="CENTER" prefHeight="370.0" prefWidth="1289.0">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="370.0" prefWidth="785.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="To connect to a server type in a local ip">
                     <font>
                        <Font name="Felix Titling" size="24.0" />
                     </font>
                  </Text>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Example: XXX.XXX.X.XX">
                     <font>
                        <Font name="Felix Titling" size="24.0" />
                     </font>
                  </Text>
                  <TextField fx:id="textFieldIp" prefHeight="77.0" prefWidth="898.0" promptText="Enter a local IP">
                     <font>
                        <Font name="Felix Titling" size="36.0" />
                     </font>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#connectToServer" prefHeight="87.0" prefWidth="271.0" text="Connect">
                     <font>
                        <Font name="Felix Titling" size="24.0" />
                     </font>
                  </Button>
                  <Text fx:id="textErrorMessage" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="637.205078125">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
